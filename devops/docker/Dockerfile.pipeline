FROM python:3.12-bullseye

WORKDIR /app

COPY ./devops/dependencies/elt-requirements.txt /app/elt-requirements.txt
RUN pip install -r /app/elt-requirements.txt

COPY ./src /app/src
COPY ./common /app/src/common

ENV PYTHONPATH="/app/src:${PYTHONPATH}"

WORKDIR /app/src/analytics
RUN dbt deps

WORKDIR /app